// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "lsp": {
    "typescript-language-server": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": { "enabled": true },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": { "enabled": true },
            "functionLikeReturnTypes": { "enabled": true },
            "enumMemberValues": { "enabled": true }
          }
        },
        // For TypeScript:
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": { "enabled": true },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": { "enabled": true },
            "functionLikeReturnTypes": { "enabled": true },
            "enumMemberValues": { "enabled": true }
          }
        }
      }
    }
  },
  "ssh_connections": [
    {
      "host": "localhost",
      "username": "root",
      "port": 2222,
      "projects": [
        {
          "paths": ["/app"]
        }
      ],
      "nickname": "PrinZex"
    }
  ],
  "icon_theme": "JetBrains New UI Icons (Dark)",
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "relative_line_numbers": true,
  "gutter": {
    "line_numbers": true,
    "min_line_number_digits": 2
  },
  "minimap": {
    "show": "never"
  },
  "tab_bar": { "show_tab_bar_buttons": false },
  "scrollbar": {
    "show": "never"
  },
  "tabs": { "file_icons": true },
  "vim_mode": true,
  "hover_popover_enabled": true,
  "cursor_blink": false,
  "project_panel": {
    "auto_fold_dirs": true,
    "dock": "right",
    "default_width": 300,
    "indent_guides": { "show": "never" },
    "scrollbar": { "show": "never" }
  },
  "collaboration_panel": { "dock": "right", "default_width": 300 },
  "git_panel": { "dock": "right", "default_width": 360 },
  "outline_panel": { "dock": "right" },
  "file_types": {
    "tailwindcss": ["*.css"],
    "scss": ["*.scss"],
    "matlab": ["*.m", "*.mat"]
  },
  "auto_install_extensions": {
    "html": true,
    "catppuccin": true,
    "colored-zed-icons-theme": true,
    "git-firefly": true,
    "github-copilot-theme": true,
    "one-dark-pro": true,
    "poimandres": true,
    "ruff": true,
    "toml": true,
    "tomorrow-theme": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 0,
    "active_line_width": 2,
    "background_coloring": "disabled"
  },
  "soft_wrap": "editor_width",
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "experimental.theme_overrides": { "border": "#00000000" },
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": null,
    "hunk_style": null
  },
  "base_keymap": "VSCode",
  "terminal": {
    "font_size": 14,
    "font_family": "JetBrainsMono Nerd Font",
    "toolbar": { "breadcrumbs": false },
    "line_height": "standard"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "features": {
    "edit_prediction_provider": "none"
  },
  "resize_all_panels_in_dock": ["left", "right", "bottom"],
  "hide_mouse": "on_typing_and_movement",
  "ui_font_size": 16.0,
  "tab_size": 4,
  "ui_font_family": "JetBrainsMono Nerd Font Mono",
  "buffer_font_size": 14.0,
  "buffer_line_height": "comfortable",
  "current_line_highlight": "all",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_features": { "calt": true },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tomorrow Night"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "formatter": [
        { "code_actions": { "source.organizeImports.ruff": true } },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "C++": { "format_on_save": "on", "tab_size": 3 },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": ["--filename", "{buffer_path}", "--indent", "4"]
        }
      }
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server"]
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "tailwindcss-language-server"
      ]
    },
    "JavaScript": {
      "language_servers": ["typescript-language-server"]
    },
    "JSON": {
      "tab_size": 2
    },
    "JSONC": {
      "tab_size": 2
    }
  },
  "active_pane_modifiers": { "border_size": 0.0 },
  "autosave": "on_focus_change"
}
