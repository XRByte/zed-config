// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
//
[
  {
    "label": "Sync zed settings",
    "command": "git -C \"${ZDG_CONFIG_HOME:-$HOME/.config/zed}\" pull",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "Update zed settings",
    "command": "git -C \"${ZDG_CONFIG_HOME:-$HOME/.config/zed}\" add --all; git -C \"${ZDG_CONFIG_HOME:-$HOME/.config/zed}\" commit -m \"Updated configuration\"; git -C \"${ZDG_CONFIG_HOME:-$HOME/.config/zed}\" push origin main",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  }
]
